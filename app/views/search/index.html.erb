<div class='row'>
  <div class='col-12 mt-3'>
    <%= render 'partials/breadcrumbs' %>
  </div>
</div>

<div class='row mt-5'>
  <% @city.city_matches.each do |match| %>
    <div class='col-12 col-md-6 col-lg-4 my-3'>
      <div class='card rounded shadow'>
        <div class='row'>
          <div class='col-12'>
            <h5 class='card-title text-center my-2'><%= "#{match.city.titleize}, #{match.state.upcase}" %></h5>
            <div class='card-body d-flex justify-content-between'>
              <div class='text-right col'>
                <%= link_to 'View', location_path(city: location.city, state: location.state, id: location.geo_id ), class: 'btn btn-primary col' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>